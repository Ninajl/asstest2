<%= form_for @company do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :description %>
<%= f.text_area :description %>

<%= f.label :price %>
<%= f.text_field :price %>

<%= f.collection_select :industry_id, Industry.all, :id, :name, {include_blank: "Please select industry"} %>
<%= f.submit %>
<% end %>
