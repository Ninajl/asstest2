<h1>Industries</h1>

<%= link_to "Add Industry", new_industry_path %>

<div class="industry">

<% @industries.each do |industry| %>
<p>
  <%= link_to industry.name, industry_path(industry) %>
</p>
<p>
  <%= industry.created_at %>
</p>
<p>
  <%= industry.updated_at %>
</p>
<% end %>

<h3>Affiliated Companies</h3>
<table>
  <tbody>
    <%= @industries.each do |industry| %>
    <tr>
      <td> <%= industry.companies.name %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
